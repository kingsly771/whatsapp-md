# ==============================================
# WhatsApp Bot Environment Configuration
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=info

# Bot Configuration
BOT_PREFIX=!
BOT_ADMIN_PREFIX=!
BOT_MAX_COMMAND_LENGTH=200
BOT_COOLDOWN=2000
BOT_NAME=WhatsAppBot
BOT_VERSION=1.0.0

# WhatsApp Session Configuration
WHATSAPP_SESSION_PATH=./storage/sessions
WHATSAPP_HEADLESS=true
WHATSAPP_USER_DATA_DIR=./storage/user_data
WHATSAPP_SESSION_TIMEOUT=60000

# Media Storage
MEDIA_STORAGE_PATH=./storage/media
MAX_MEDIA_SIZE=16777216
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# Database Configuration (if using database in future)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=whatsapp_bot
DB_USER=
DB_PASSWORD=

# External API Configuration
ANILIST_API_URL=https://graphql.anilist.co
MYANIMELIST_API_URL=https://api.myanimelist.net/v2
ANIME_API_KEY=your_anime_api_key_here
MANGA_API_KEY=your_manga_api_key_here

# Plugin Configuration
PLUGINS_MAX_EXECUTION_TIME=10000
PLUGINS_ENABLE_ALL_BY_DEFAULT=false
PLUGINS_AUTO_UPDATE=true
PLUGINS_UPDATE_CHECK_INTERVAL=3600000

# Security Configuration
ALLOWED_SESSION_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MAX_SESSIONS_PER_IP=5
SESSION_TIMEOUT_MINUTES=60
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=900000

# Notification Configuration
NOTIFICATION_WEBHOOK_URL=
NOTIFICATION_EMAIL=
NOTIFICATION_DISCORD_WEBHOOK=

# Logging Configuration
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=14
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_CHECK_PERIOD=60000
CACHE_MAX_ITEMS=1000

# Performance Configuration
MAX_MEMORY_USAGE=512
GC_INTERVAL=300000
WORKER_THREADS=2

# Backup Configuration
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./storage/backups

# ==============================================
# Optional Features (set to true/false)
# ==============================================
FEATURE_AUTO_RESPONSE=true
FEATURE_MEDIA_DOWNLOAD=true
FEATURE_GROUP_MANAGEMENT=true
FEATURE_BROADCAST=true
FEATURE_SCHEDULED_MESSAGES=true
FEATURE_CHAT_BACKUP=true
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=false

# ==============================================
# Development & Debugging
# ==============================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEV_TOOLS=false
ALLOW_SELF_SIGNED_CERTS=false

# ==============================================
# API Keys (Add your actual keys here)
# ==============================================
# Get these from respective services if needed
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
TRANSLATION_API_KEY=your_translation_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# ==============================================
# Customization
# ==============================================
DEFAULT_LANGUAGE=en
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# ==============================================
# WhatsApp Web Configuration
# ==============================================
WHATSAPP_WEB_VERSION=2.2412.54
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# ==============================================
# SSL Configuration (for production)
# ==============================================
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=./ssl/ca_bundle.crt

# ==============================================
# CORS Configuration
# ==============================================
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_CREDENTIALS=true

# ==============================================
# Session Management
# ==============================================
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
